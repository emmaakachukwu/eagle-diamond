<%
  content_for :title, @title
  content_for :stylesheet, 'dashboard'
%>
<% content_for :scripts do %>
  <script src="/assets/custom/dashboard"></script>
<% end %>
<% content_for :styles do %>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css" rel="stylesheet">
<% end %>

<div class="app">
  <%= render 'partials/top' %>

  <div class="app__content">
    <%= render 'partials/accounts' %>
    <%= render 'partials/side_nav' %>

    <div class="mails">
      <%= render 'partials/packages/list', packages: @packages %>
      <%= render 'partials/packages/preview', package: @package, recipient: @recipient if @package.present? %>
    </div>
  </div>
</div>
