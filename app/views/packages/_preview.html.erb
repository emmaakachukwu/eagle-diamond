<div class="preview">
  <div class="preview-top">
    <div class="preview__title"><%= package.title %></div>
    <div>
      <i class="preview-top__icon fas fa-print"></i>
      <i class="preview-top__icon fas fa-archive"></i>
      <i class="preview-top__icon fas fa-ellipsis-h"></i>
    </div>
  </div>

  <div class="scrollable">
    <div class="preview-content scrollable__target">
      <div class="preview-respond">
        <div class="preview-respond__head">
          <div class="profile-head">
            <div class="profile-head__id">
              <img class="profile-head__avatar"
                   src="<%= package.sender.avatar_url %>"
                   alt="<%= package.sender.avatar_alt %>"
              >
              <div>
                <div class="profile-head__name"><%= package.sender.name %></div>
                <div class="profile-head__mail"><%= package.sender.email %></div>
              </div>
            </div>
            <div class="date"><%= recipient.created_at.to_readable %></div>
          </div>
        </div>
        <div class="preview-respond__content">
          <p class="paragraph"><%= package.body %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="preview-foot">
    <button class="preview-foot__button button">
      <i class="fas fa-reply-all"></i>
      Reply All
    </button>
    <button class="preview-foot__button button">
      <i class="fas fa-reply"></i>
      Reply
    </button>
  </div>
</div>
