<% content_for :title, 'Login' %>

<div class="background">
  <div class="shape"></div>
  <div class="shape"></div>
</div>

<%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
  <h3>Login here</h3>

  <%= render 'partials/error_messages', resource: resource %>

  <%= f.label :email %>
  <%= f.email_field :email, placeholder: 'Enter email address', required: true, autofocus: true, autocomplete: "email" %>

  <%= f.label :password %>
  <%= f.password_field :password,
    placeholder: 'Enter password',
    required: true, autocomplete: "new-password" %>

  <% if devise_mapping.rememberable? %>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  <% end %>

  <%= f.submit 'Log in', class: 'submit' %>
<% end %>
