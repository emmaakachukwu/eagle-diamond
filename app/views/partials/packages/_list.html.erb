<div class="message-list scrollable">
  <div class="scrollable__target">
    <% packages.each do |package| %>
      <% recipient = package.recipients.recipient(current_user).first %>
      <a href="<%= recipient ? package_path(package) : sent_package_path(package) %>">
        <div class="<%= package_preview_css_class package, recipient %>">
          <div class="message__actions">
            <i class="message__icon far fa-square"></i>
            <i class="message__icon fas fa-trash-alt"></i>
            <i class="message__icon fas fa-archive"></i>
          </div>
          <div class="message__content">
            <div class="message__exp">
              <div><%= package.sender.name %></div>
              <div class="date">
                <%= recipient ? recipient.created_at.to_readable : package.created_at.to_readable %>
              </div>
            </div>
            <div class="message__title"><%= package.title %></div>
            <div class="message__expr">« <%= package.decrypted_body[0...50] %> »</div>
          </div>
        </div>
      </a>
    <% end %>
  </div>
</div>
